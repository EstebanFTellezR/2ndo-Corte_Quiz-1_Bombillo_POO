public class Bombillo {
  
  boolean encendido;
  String color = "azul";

  /**
  * "ATRIBUTOS"
  * Declara la variable de tipo boolean encendido y la variable de tipo String color con la palabra "Azul".
  * @param encendido
  * Complejidad temporal: 0(1) Tiempo Constante
  */

  public Bombillo(boolean encendido){
    this.encendido = encendido;
  }

  /**
  * "METODOS"
  * Constructor de la clase Bombillo.
  */

  void prender () {
    encendido = true;
  }

  void apagar (){
    encendido = false;
  }

  void estaPrendido () {
    if (this.encendido) {
      System.out.println("El bombillo "+color+" esta encendido");
    }
    else {
      System.out.println("El bombillo "+color+" esta apagado");
    }
  }

  /**
  * "METODOS"
  * Controlan si el bombillo se prende o se apaga mostrando un mesnaje en pantalla.
  */
}
